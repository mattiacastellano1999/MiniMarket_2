<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/home_imgBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/home"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Rider Assignment \n For Order: "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rider_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="Rider Status: "
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/exit_imgBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/logout"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/rider_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rider Selected: "
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"/>

    <Spinner
        android:id="@+id/rider_ed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rider_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:autofillHints="name" />

    <Button
        android:id="@+id/cancle_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Cancle"/>

    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Confirm"/>



</RelativeLayout>