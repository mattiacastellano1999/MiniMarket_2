<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nome_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="Delivery Finished"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="Delivery Status:"/>

    <RadioGroup
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RadioButton
            android:id="@+id/rb_delivered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivered"/>

        <RadioButton
            android:id="@+id/rb_notdelivered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unsuccessful delivery"/>

        <RadioButton
            android:id="@+id/rb_refused"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job refused"/>

    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="Rate the Client"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/testo_cortesia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer courtesy"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <RatingBar
            android:id="@+id/raiting_cortesia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/testo_cortesia"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/testo_casa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/raiting_cortesia"
            android:text="Customer house presence"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <RatingBar
            android:id="@+id/raiting_casa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/testo_casa"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/cancle_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/raiting_casa"
            android:text="Cancle" />

        <Button
            android:id="@+id/confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/raiting_casa"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:text="Confirm" />

    </RelativeLayout>

</LinearLayout>